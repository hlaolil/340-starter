
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

    <%- message %>

<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

  <form action="/inv/add-inventory" method="POST">
    <label>Classification:</label>
    <%- classificationList %>
    <label>Make:</label>
    <input type="text" name="inv_make" value="<%= inv_make || '' %>" required>

    <label>Model:</label>
    <input type="text" name="inv_model" value="<%= inv_model || '' %>" required>

    <label>Year:</label>
    <input type="number" name="inv_year" value="<%= inv_year || '' %>" required>

    <label>Description:</label>
    <textarea name="inv_description" required><%= inv_description || '' %></textarea>

    <label>Image Path:</label>
    <input type="text" name="inv_image" value="<%= inv_image || '/images/vehicles/no-image.png' %>" required>

    <label>Thumbnail Path:</label>
    <input type="text" name="inv_thumbnail" value="<%= inv_thumbnail || '/images/vehicles/no-image.png' %>" required>

    <label>Price:</label>
    <input type="number" step="0.01" name="inv_price" value="<%= inv_price || '' %>" required>

    <label>Miles:</label>
    <input type="number" name="inv_miles" value="<%= inv_miles || '' %>" required>

    <label>Color:</label>
    <input type="text" name="inv_color" value="<%= inv_color || '' %>" required>

    

    <button type="submit">Add Inventory</button>
  </form>
