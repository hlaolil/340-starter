
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

    <%- message %>

<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

  <form action="/inv/add-classification" method="POST">
    <label for="classification_name">Classification Name (no spaces or special characters):</label>
    <input type="text" name="classification_name" id="classification_name" pattern="[A-Za-z0-9]+" required>
    <button type="submit">Add Classification</button>
  </form>
