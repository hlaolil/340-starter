<h1><%= title %></h1>
  <% if (message) { %>
    <p class="notice"><%= message %></p>
  <% } %>
  <form action="/accounts/login" method="POST" class="login-form">
    <label for="account_email">Email Address</label>
    <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email || '' %>" aria-label="Enter your email address">
    <label for="account_password">Password</label>
    <input type="password" id="account_password" name="account_password" required value="<%= locals.account_password || '' %>" aria-label="Enter your password">
    <button type="submit" class="login-button">Log In</button>
  </form>
  <p class="register-link">
    Don't have an account? <a href="/accounts/register" aria-label="Register for a new account">Sign Up</a>
  </p>
