<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

    <%- message %>
  
    <% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<h2>Welcome <%= accountData.account_firstname %></h2

<p>You're logged in</p>

 <!-- Update account info link (always visible) -->
  <p>
    <a href="/accounts/update/<%= account_id %>">Update Account Information</a>
  </p>

  <!-- Conditional Inventory Management section -->
  <% if (account_type === "Employee" || account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p>
      <a href="/inv/">Manage Inventory</a>
    </p>
  <% } %>


